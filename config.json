{
  "source": [
    "tokens/**/*.json",
    "tokens/**/*.js"
  ],
  "platforms": {
    "figma-tokens": {
      "transformGroup": "js",
      "buildPath": "build/js/",
      "files": [
        {
          "destination": "figma-tokens.json",
          "format": "json"
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [
        {
          "destination": "_variables.scss",
          "format": "scss/variables"
        }
      ]
    }
  }
}
