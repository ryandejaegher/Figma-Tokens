{
  "source": [
    "tokens/base/font.json"
  ],
  "platforms": {
    "figma-tokens": {
      "transformGroup": "js",
      "buildPath": "build/js/",
      "files": [
        {
          "destination": "figma-tokens.json",
          "format": "json"
        }
      ]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "_variables.css",
          "format": "css/variables"
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [
        {
          "destination": "_variables.scss",
          "format": "scss/variables"
        }
      ]
    }
  }
}
